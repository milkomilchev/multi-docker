{
    "AWSEBDockerrunVersion":2,
    "containerDefinitions":[
       {
          "name":"client",
          "image":"milkomilchev/multi-client",
          "hostname":"client",
          "essential":false
       },
       {
          "name":"server",
          "image":"milkomilchev/multi-server",
          "hostname":"api",
          "essential":false
       },
       {
          "name":"worker",
          "image":"milkomilchev/multi-worker",
          "hostname":"worker",
          "essential":false
       },
       {
          "name":"nginx",
          "image":"milkomilchev/multi-nginx",
          "hostname":"nginx",
          "essential":true,
          "portMappings":[
             {
                "hostPort":80,
                "containerPort":80
             }
          ],
          "links":[
             "client",
             "server"
          ]
       }
    ]
 }